# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
# This file contains example environment variables for LOCAL DEVELOPMENT
# For Docker development, see .env.docker
# For production, create .env.prod with appropriate values
# =============================================================================

# Core Database Configuration
# For Docker development (default) - uses Docker service name
# For local development, change to: postgresql://agentcloud:agentcloud@localhost:5432/agentcloud
DATABASE_URL=postgresql://agentcloud:agentcloud@db:5432/agentcloud

DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# MCP Configuration
MCP_SERVER_URL=http://localhost:3001
MCP_POSTGRES_HOST=localhost
MCP_POSTGRES_PORT=5432
MCP_POSTGRES_DB=agent_marketplace
MCP_POSTGRES_USER=postgres
MCP_POSTGRES_PASSWORD=yourpassword

# Payment Configuration
# Stripe (use test keys for development)
STRIPE_API_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# PayPal (use sandbox credentials for development)
PAYPAL_CLIENT_ID=AYiPC...
PAYPAL_SECRET=EHiVr...

# OpenAI Configuration
OPENAI_API_KEY=sk-...

# Application Settings
APP_NAME=Agent Compute Marketplace
DEBUG=false
ENVIRONMENT=development

# API Configuration (for dashboard)
# For Docker development (default) - uses Docker service name
# For local development, change to: http://localhost:8000
API_BASE=http://api:8000

# Observability (Docker-ready defaults)
# For Docker development (default) - uses Docker service names
# For local development, change to: http://localhost:4317 and http://localhost:9090
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4317
OTEL_SERVICE_NAME=agent-compute-marketplace
OTEL_RESOURCE_ATTRIBUTES=service.name=agent-compute-marketplace,service.version=0.1.0

# Metrics
METRICS_ENABLED=true
PROMETHEUS_ENDPOINT=http://prometheus:9090 
# Application Settings
APP_NAME=Agent Compute Marketplace
DEBUG=false
ENVIRONMENT=development

# API Configuration (for dashboard)
# For Docker development (default) - uses Docker service name
# For local development, change to: http://localhost:8000
API_BASE=http://api:8000

# Observability (Docker-ready defaults)
# For Docker development (default) - uses Docker service names
# For local development, change to: http://localhost:4317 and http://localhost:9090
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4317
OTEL_SERVICE_NAME=agent-compute-marketplace
OTEL_RESOURCE_ATTRIBUTES=service.name=agent-compute-marketplace,service.version=0.1.0

# Metrics
METRICS_ENABLED=true
PROMETHEUS_ENDPOINT=http://prometheus:9090

# Metrics Authentication (for production)
# Set this to protect /metrics endpoint in production environments
# METRICS_AUTH_TOKEN=your-secret-token-here 

# Demo mode and tracing control
DEMO_MODE=true
DISABLE_TRACING=true